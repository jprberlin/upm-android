<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/accountScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="0dip" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" 
         android:paddingTop="10dip"
        >

        <TableRow
            android:id="@+id/account_name_wrapper"
            style="@style/TableRowStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="clickHandler"
            android:paddingLeft="10dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="@string/account_name"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/account_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:clickable="false"
                    android:inputType="textMultiLine"
                    android:textSize="20dp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/account_userid_wrapper"
            style="@style/TableRowStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="clickHandler"
            android:paddingLeft="10dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="@string/userid"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/account_userid"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:clickable="false"
                    android:inputType="textMultiLine"
                    android:textSize="20dp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/account_password_wrapper"
            style="@style/TableRowStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="clickHandler"
            android:paddingLeft="10dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="@string/password"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/account_password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:clickable="false"
                    android:inputType="textVisiblePassword"
                    android:textSize="20dp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/account_url_wrapper"
            style="@style/TableRowStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="clickHandler"
            android:paddingLeft="10dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="@string/url"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/account_url"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:autoLink="all"
                    android:clickable="false"
                    android:inputType="textMultiLine"
                    android:textSize="20dp" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/account_notes_wrapper"
            style="@style/TableRowStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="clickHandler"
            android:paddingLeft="10dip" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="@string/notes"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/account_notes"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:clickable="false"
                    android:inputType="textMultiLine"
                    android:textSize="20dp" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

</ScrollView>